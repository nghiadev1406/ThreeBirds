<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thông tin đơn hàng"
        android:textColor="#279432"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <EditText
                android:id="@+id/dialog_DH_edtSanPham"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:ems="10"
                android:hint="Sản phẩm"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/dialog_DH_btnChonSanPham"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/plus" />
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_DH_edtNhanHieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhãn hiệu"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dialog_DH_edtSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Số lượng"
            android:inputType="number" />

        <Spinner
            android:id="@+id/dialog_DH_spinnerTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <EditText
                android:id="@+id/dialog_DH_edtTenKH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:ems="10"
                android:hint="Khách hàng"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/dialog_DH_btnChonKH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/plus" />
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_DH_edtSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="number" />

        <EditText
            android:id="@+id/dialog_DH_edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Địa chỉ"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_DH_btnOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận" />

            <Button
                android:id="@+id/dialog_DH_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy" />
        </LinearLayout>
        <!--          <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="10">

                      <EditText
                          android:id="@+id/edtNgayTao"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="9"
                          android:ems="10"
                          android:hint="Ngày tạo"
                          android:inputType="textPersonName" />

                      <ImageButton
                          android:id="@+id/btnChonNgay"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:background="@null"
                          android:src="@drawable/plus" />
                  </LinearLayout>-->
    </LinearLayout>

</LinearLayout>